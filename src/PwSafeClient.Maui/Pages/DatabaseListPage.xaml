<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PwSafeClient.Maui.Pages.DatabaseListPage"
    x:Name="Page"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Databases"
    BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource OffBlack}}">

    <ContentPage.ToolbarItems>
        <ToolbarItem Command="{Binding ImportDatabaseCommand}">
            <ToolbarItem.IconImageSource>
                <FontImageSource FontFamily="IconFont" Glyph="&#xe90e;" Color="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" Size="24" />
            </ToolbarItem.IconImageSource>
        </ToolbarItem>
        <ToolbarItem Clicked="OnSettingsClicked">
            <ToolbarItem.IconImageSource>
                <FontImageSource FontFamily="IconFont" Glyph="&#xe912;" Color="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" Size="24" />
            </ToolbarItem.IconImageSource>
        </ToolbarItem>
    </ContentPage.ToolbarItems>

    <Grid RowDefinitions="Auto,*,Auto" Padding="24" RowSpacing="16">

        <!-- Search Bar -->
        <Border Grid.Row="0" StrokeShape="RoundRectangle 12" StrokeThickness="0" BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray900}}" Padding="12,0" HeightRequest="50">
             <Grid ColumnDefinitions="Auto, *">
                 <Label Grid.Column="0" Text="&#xe911;" FontFamily="IconFont" FontSize="20" TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" VerticalOptions="Center" Margin="0,0,8,0" />
                 <Entry Grid.Column="1" Placeholder="Search databases..." Text="{Binding SearchText}" BackgroundColor="Transparent" VerticalOptions="Center" />
             </Grid>
        </Border>

        <CollectionView
            Grid.Row="1"
            ItemsSource="{Binding Databases}"
            SelectionMode="None">
            <CollectionView.EmptyView>
                <Label Text="No databases" TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray300}}" HorizontalOptions="Center" VerticalOptions="Center" />
            </CollectionView.EmptyView>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="0,12" ColumnDefinitions="Auto, *, Auto">
                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding Source={x:Reference Page}, Path=BindingContext.OpenDatabaseCommand}" CommandParameter="{Binding .}" />
                        </Grid.GestureRecognizers>

                        <!-- Icon -->
                        <Border Grid.Column="0" HeightRequest="48" WidthRequest="48" StrokeShape="RoundRectangle 12" StrokeThickness="0" Margin="0,0,16,0">
                            <Label Text="&#xe90a;" FontFamily="IconFont" FontSize="24" TextColor="{StaticResource Primary}" HorizontalOptions="Center" VerticalOptions="Center" />
                        </Border>

                        <!-- Text -->
                        <VerticalStackLayout Grid.Column="1" VerticalOptions="Center" Spacing="4">
                            <Label Text="{Binding Alias}" FontSize="16" FontAttributes="Bold" TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />
                            <Label Text="{Binding LastUpdatedText}" FontSize="12" TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />
                        </VerticalStackLayout>

                        <!-- Chevron -->
                        <Label Grid.Column="2" Text="&#xe901;" FontFamily="IconFont" FontSize="20" TextColor="{AppThemeBinding Light={StaticResource Gray400}, Dark={StaticResource Gray600}}" VerticalOptions="Center" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Label Grid.Row="2" Text="{Binding ErrorMessage}" TextColor="Red" FontSize="12" />

        <Button
            Grid.Row="1"
            Text="&#xe90e;"
            FontFamily="IconFont"
            Command="{Binding CreateDatabaseCommand}"
            BackgroundColor="{StaticResource Primary}"
            TextColor="White"
            FontSize="28"
            CornerRadius="28"
            HeightRequest="56"
            WidthRequest="56"
            Padding="0"
            HorizontalOptions="End"
            VerticalOptions="End"
            Margin="0,0,0,24" />
    </Grid>
</ContentPage>
