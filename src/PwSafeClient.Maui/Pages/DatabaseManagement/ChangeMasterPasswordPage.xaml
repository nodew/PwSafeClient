<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PwSafeClient.Maui.Pages.DatabaseManagement.ChangeMasterPasswordPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Change Master Password"
    BackgroundColor="{AppThemeBinding Light={StaticResource BackgroundLight}, Dark={StaticResource BackgroundDark}}">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Close" Command="{Binding CloseCommand}" />
    </ContentPage.ToolbarItems>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="18">
            <Grid ColumnDefinitions="*,Auto" ColumnSpacing="12">
                <Label Text="Change Master Password" FontSize="18" FontAttributes="Bold" VerticalOptions="Center" />
                <ActivityIndicator
                    Grid.Column="1"
                    IsRunning="{Binding IsBusy}"
                    IsVisible="{Binding IsBusy}"
                    VerticalOptions="Center" />
            </Grid>

            <Label
                Text="Update the master password used to encrypt all your local databases."
                FontSize="13"
                TextColor="{AppThemeBinding Light={StaticResource TextSecondaryLight}, Dark={StaticResource TextSecondaryDark}}" />

            <VerticalStackLayout Spacing="8">
                <Label Text="Current Master Password" FontSize="13" TextColor="{AppThemeBinding Light={StaticResource TextSecondaryLight}, Dark={StaticResource TextSecondaryDark}}" FontAttributes="Bold" />
                <Border Padding="12" BackgroundColor="{AppThemeBinding Light={StaticResource SurfaceLight}, Dark={StaticResource SurfaceDark}}"
                        Stroke="{AppThemeBinding Light={StaticResource BorderLight}, Dark={StaticResource BorderDark}}" StrokeThickness="1"
                        StrokeShape="RoundRectangle 12">
                    <Entry
                        Placeholder="Enter current password"
                        Text="{Binding CurrentPassword}"
                        IsPassword="True"
                        BackgroundColor="Transparent" />
                </Border>
            </VerticalStackLayout>

            <VerticalStackLayout Spacing="8">
                <Label Text="New Master Password" FontSize="13" TextColor="{AppThemeBinding Light={StaticResource TextSecondaryLight}, Dark={StaticResource TextSecondaryDark}}" FontAttributes="Bold" />
                <Border Padding="12" BackgroundColor="{AppThemeBinding Light={StaticResource SurfaceLight}, Dark={StaticResource SurfaceDark}}"
                        Stroke="{AppThemeBinding Light={StaticResource BorderLight}, Dark={StaticResource BorderDark}}" StrokeThickness="1"
                        StrokeShape="RoundRectangle 12">
                    <Entry
                        Placeholder="Enter new password"
                        Text="{Binding NewPassword}"
                        IsPassword="True"
                        BackgroundColor="Transparent" />
                </Border>
            </VerticalStackLayout>

            <VerticalStackLayout Spacing="8">
                <Label Text="Confirm New Master Password" FontSize="13" TextColor="{AppThemeBinding Light={StaticResource TextSecondaryLight}, Dark={StaticResource TextSecondaryDark}}" FontAttributes="Bold" />
                <Border Padding="12" BackgroundColor="{AppThemeBinding Light={StaticResource SurfaceLight}, Dark={StaticResource SurfaceDark}}"
                        Stroke="{AppThemeBinding Light={StaticResource BorderLight}, Dark={StaticResource BorderDark}}" StrokeThickness="1"
                        StrokeShape="RoundRectangle 12">
                    <Entry
                        Placeholder="Re-enter new password"
                        Text="{Binding ConfirmNewPassword}"
                        IsPassword="True"
                        BackgroundColor="Transparent" />
                </Border>
            </VerticalStackLayout>

            <Border Padding="12" BackgroundColor="{AppThemeBinding Light={StaticResource Secondary}, Dark={StaticResource Gray800}}"
                    Stroke="{AppThemeBinding Light={StaticResource BorderLight}, Dark={StaticResource BorderDark}}"
                    StrokeThickness="1"
                    StrokeShape="RoundRectangle 12">
                <HorizontalStackLayout Spacing="8">
                    <Label Text="&#xe90d;" FontFamily="IconFont" FontSize="18" TextColor="{StaticResource Error}" VerticalOptions="Start" />
                    <Label
                        Text="Password must be at least 8 characters long."
                        FontSize="12"
                        TextColor="{StaticResource Error}" />
                </HorizontalStackLayout>
            </Border>

            <Label
                Text="{Binding ErrorMessage}"
                IsVisible="{Binding ErrorMessage, Converter={StaticResource StringNotNullOrWhiteSpaceConverter}}"
                TextColor="{StaticResource Error}"
                FontSize="12" />

            <Button
                Text="Save Changes"
                Command="{Binding ChangeCommand}"
                IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBooleanConverter}}"
                BackgroundColor="{StaticResource Primary}"
                CornerRadius="12"
                HeightRequest="48" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
