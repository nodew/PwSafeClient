<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PwSafeClient.Maui.Pages.DatabaseManagement.CreateDatabasePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="New Database"
    BackgroundColor="{AppThemeBinding Light={StaticResource BackgroundLight}, Dark={StaticResource BackgroundDark}}">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Cancel" Command="{Binding CancelCommand}" IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBooleanConverter}}" />
    </ContentPage.ToolbarItems>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="18">
            <Grid ColumnDefinitions="*,Auto" ColumnSpacing="12">
                <ActivityIndicator
                    Grid.Column="1"
                    IsRunning="{Binding IsBusy}"
                    IsVisible="{Binding IsBusy}"
                    VerticalOptions="Center" />
            </Grid>

            <VerticalStackLayout Spacing="6" HorizontalOptions="Center">
                <Border HeightRequest="80" WidthRequest="80" BackgroundColor="{AppThemeBinding Light={StaticResource SurfaceLight}, Dark={StaticResource SurfaceDark}}"
                        Stroke="{AppThemeBinding Light={StaticResource BorderLight}, Dark={StaticResource BorderDark}}" StrokeThickness="1"
                        StrokeShape="RoundRectangle 40">
                    <Label Text="&#xe90d;" FontFamily="IconFont" FontSize="34" TextColor="{StaticResource Primary}" HorizontalOptions="Center" VerticalOptions="Center" />
                </Border>
                <Label Text="Secure Setup" FontSize="22" FontAttributes="Bold" HorizontalOptions="Center" />
                <Label
                    Text="Create a new local encrypted database to store your passwords securely."
                    FontSize="12"
                    TextColor="{AppThemeBinding Light={StaticResource TextSecondaryLight}, Dark={StaticResource TextSecondaryDark}}"
                    HorizontalTextAlignment="Center" />
            </VerticalStackLayout>

            <VerticalStackLayout Spacing="8">
                <Label Text="Database Name" FontSize="13" TextColor="{AppThemeBinding Light={StaticResource TextSecondaryLight}, Dark={StaticResource TextSecondaryDark}}" FontAttributes="Bold" />
                <Border Padding="12" BackgroundColor="{AppThemeBinding Light={StaticResource SurfaceLight}, Dark={StaticResource SurfaceDark}}"
                        Stroke="{AppThemeBinding Light={StaticResource BorderLight}, Dark={StaticResource BorderDark}}" StrokeThickness="1"
                        StrokeShape="RoundRectangle 12">
                    <Entry
                        Placeholder="e.g. Personal, Work"
                        Text="{Binding DatabaseName}"
                        BackgroundColor="Transparent" />
                </Border>
            </VerticalStackLayout>

            <VerticalStackLayout Spacing="8">
                <Label Text="Master Password" FontSize="13" TextColor="{AppThemeBinding Light={StaticResource TextSecondaryLight}, Dark={StaticResource TextSecondaryDark}}" FontAttributes="Bold" />
                <Border Padding="12" BackgroundColor="{AppThemeBinding Light={StaticResource SurfaceLight}, Dark={StaticResource SurfaceDark}}"
                        Stroke="{AppThemeBinding Light={StaticResource BorderLight}, Dark={StaticResource BorderDark}}" StrokeThickness="1"
                        StrokeShape="RoundRectangle 12">
                    <Entry
                        Placeholder="Create a strong password"
                        Text="{Binding MasterPassword}"
                        IsPassword="True"
                        BackgroundColor="Transparent" />
                </Border>
            </VerticalStackLayout>

            <VerticalStackLayout Spacing="8">
                <Label Text="Confirm Password" FontSize="13" TextColor="{AppThemeBinding Light={StaticResource TextSecondaryLight}, Dark={StaticResource TextSecondaryDark}}" FontAttributes="Bold" />
                <Border Padding="12" BackgroundColor="{AppThemeBinding Light={StaticResource SurfaceLight}, Dark={StaticResource SurfaceDark}}"
                        Stroke="{AppThemeBinding Light={StaticResource BorderLight}, Dark={StaticResource BorderDark}}" StrokeThickness="1"
                        StrokeShape="RoundRectangle 12">
                    <Entry
                        Placeholder="Re-enter password"
                        Text="{Binding ConfirmPassword}"
                        IsPassword="True"
                        BackgroundColor="Transparent" />
                </Border>
            </VerticalStackLayout>

            <Border Padding="12" BackgroundColor="{AppThemeBinding Light={StaticResource Secondary}, Dark={StaticResource Gray800}}" Stroke="{AppThemeBinding Light={StaticResource BorderLight}, Dark={StaticResource BorderDark}}" StrokeThickness="1" StrokeShape="RoundRectangle 12">
                <HorizontalStackLayout Spacing="8">
                    <Label Text="&#xe90d;" FontFamily="IconFont" FontSize="18" TextColor="{StaticResource Error}" VerticalOptions="Start" />
                    <Label
                        Text="Important: If you forget your master password, your data cannot be recovered."
                        FontSize="12"
                        TextColor="{StaticResource Error}" />
                </HorizontalStackLayout>
            </Border>

            <Label
                Text="{Binding ErrorMessage}"
                IsVisible="{Binding ErrorMessage, Converter={StaticResource StringNotNullOrWhiteSpaceConverter}}"
                TextColor="{StaticResource Error}"
                FontSize="12" />

            <Button
                Text="Create Database"
                Command="{Binding CreateCommand}"
                IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBooleanConverter}}"
                BackgroundColor="{StaticResource Primary}"
                CornerRadius="12"
                HeightRequest="48" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
