<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PwSafeClient.Maui.Pages.VaultPage"
    x:Name="Page"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="{AppThemeBinding Light={StaticResource BackgroundLight}, Dark={StaticResource BackgroundDark}}"
    Shell.NavBarIsVisible="True">

    <Shell.BackButtonBehavior>
        <BackButtonBehavior IsVisible="False" IsEnabled="False" />
    </Shell.BackButtonBehavior>

    <Shell.TitleView>
        <Grid ColumnDefinitions="*,Auto" ColumnSpacing="12" VerticalOptions="Center" Margin="0,0,12,0">
            <VerticalStackLayout Grid.Column="0" Spacing="2" VerticalOptions="Center">
                <Label Text="{Binding DatabaseName}" FontSize="14" FontAttributes="Bold"
                       TextColor="{AppThemeBinding Light={StaticResource TextMainLight}, Dark={StaticResource TextMainDark}}"
                       LineBreakMode="TailTruncation"
                       IsVisible="{Binding DatabaseName, Converter={StaticResource StringNotNullOrWhiteSpaceConverter}}" />
                <Label
                    Text="{Binding Breadcrumb}"
                    FontSize="11"
                    TextColor="{AppThemeBinding Light={StaticResource TextSecondaryLight}, Dark={StaticResource TextSecondaryDark}}"
                    LineBreakMode="TailTruncation" />
            </VerticalStackLayout>

            <ActivityIndicator
                Grid.Column="1"
                IsRunning="{Binding IsBusy}"
                IsVisible="{Binding IsBusy}"
                VerticalOptions="Center"
                Color="{AppThemeBinding Light={StaticResource TextMainLight}, Dark={StaticResource TextMainDark}}" />
        </Grid>
    </Shell.TitleView>

    <ContentPage.ToolbarItems>
        <ToolbarItem Command="{Binding CloseDatabaseCommand}">
            <ToolbarItem.IconImageSource>
                <FontImageSource FontFamily="IconFont" Glyph="&#xe902;" Size="24" Color="{AppThemeBinding Light={StaticResource TextMainLight}, Dark={StaticResource TextMainDark}}" />
            </ToolbarItem.IconImageSource>
        </ToolbarItem>
        <ToolbarItem Command="{Binding OpenSettingsCommand}">
            <ToolbarItem.IconImageSource>
                <FontImageSource FontFamily="IconFont" Glyph="&#xe912;" Size="24" Color="{AppThemeBinding Light={StaticResource TextMainLight}, Dark={StaticResource TextMainDark}}" />
            </ToolbarItem.IconImageSource>
        </ToolbarItem>
    </ContentPage.ToolbarItems>

    <Grid Padding="20,12" RowDefinitions="Auto,Auto,*" RowSpacing="8">

        <!-- Search -->
        <Border Grid.Row="0" Padding="10,0"
                BackgroundColor="{AppThemeBinding Light={StaticResource SurfaceLight}, Dark={StaticResource SurfaceDark}}"
                Stroke="{AppThemeBinding Light={StaticResource BorderLight}, Dark={StaticResource BorderDark}}"
                StrokeThickness="1"
                StrokeShape="RoundRectangle 12">
            <Grid ColumnDefinitions="Auto,*" ColumnSpacing="8">
                <Label Grid.Column="0" Text="&#xe911;" FontFamily="IconFont" FontSize="18" VerticalOptions="Center"
                       TextColor="{AppThemeBinding Light={StaticResource Gray400}, Dark={StaticResource Gray400}}" />
                <Entry Grid.Column="1"
                       Placeholder="Search entries..."
                       Text="{Binding SearchText}"
                       BackgroundColor="Transparent"
                       FontSize="14"
                       VerticalOptions="Center" />
            </Grid>
        </Border>

        <!-- Breadcrumb -->
        <Border Grid.Row="1"
                Padding="10,6"
                BackgroundColor="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource SurfaceDark}}"
                Stroke="{AppThemeBinding Light={StaticResource BorderLight}, Dark={StaticResource BorderDark}}"
                StrokeThickness="1"
                StrokeShape="RoundRectangle 10">
            <HorizontalStackLayout Spacing="6">
                <Label Text="{Binding Breadcrumb}" FontSize="12"
                       TextColor="{AppThemeBinding Light={StaticResource TextSecondaryLight}, Dark={StaticResource TextSecondaryDark}}"
                       LineBreakMode="TailTruncation" />
            </HorizontalStackLayout>
        </Border>

        <!-- List -->
        <CollectionView Grid.Row="2" ItemsSource="{Binding Items}" SelectionMode="None">
            <CollectionView.EmptyView>
                <Label Text="No items" TextColor="{AppThemeBinding Light={StaticResource TextSecondaryLight}, Dark={StaticResource TextSecondaryDark}}" HorizontalOptions="Center" VerticalOptions="Center" />
            </CollectionView.EmptyView>
            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Vertical" ItemSpacing="0" />
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <VerticalStackLayout Spacing="0">
                        <Grid Padding="16,14" ColumnDefinitions="Auto,*,Auto" ColumnSpacing="16">
                            <Grid.GestureRecognizers>
                                <TapGestureRecognizer
                                    Command="{Binding Source={x:Reference Page}, Path=BindingContext.OpenItemCommand}"
                                    CommandParameter="{Binding .}" />
                            </Grid.GestureRecognizers>

                            <Label Grid.Column="0"
                                   FontFamily="IconFont"
                                   FontSize="22"
                                   VerticalOptions="Center">
                                <Label.Triggers>
                                    <DataTrigger TargetType="Label" Binding="{Binding Kind}" Value="Group">
                                        <Setter Property="Text" Value="&#xe90a;" />
                                        <Setter Property="TextColor" Value="{StaticResource Warning}" />
                                    </DataTrigger>
                                    <DataTrigger TargetType="Label" Binding="{Binding Kind}" Value="Entry">
                                        <Setter Property="Text" Value="&#xe90c;" />
                                        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray400}}" />
                                    </DataTrigger>
                                </Label.Triggers>
                            </Label>

                            <VerticalStackLayout Grid.Column="1" VerticalOptions="Center" Spacing="2">
                                <Label Text="{Binding Title}" FontSize="15" FontAttributes="Bold" LineBreakMode="TailTruncation" />
                                <Label Text="{Binding Subtitle}"
                                       FontSize="12"
                                       TextColor="{AppThemeBinding Light={StaticResource TextSecondaryLight}, Dark={StaticResource TextSecondaryDark}}"
                                       LineBreakMode="TailTruncation"
                                       IsVisible="{Binding Subtitle, Converter={StaticResource StringNotNullOrWhiteSpaceConverter}}" />
                            </VerticalStackLayout>

                            <Label Grid.Column="2"
                                   Text="&#xe901;"
                                   FontFamily="IconFont"
                                   FontSize="16"
                                   TextColor="{AppThemeBinding Light={StaticResource Gray400}, Dark={StaticResource Gray500}}"
                                   VerticalOptions="Center" />
                        </Grid>
                        <BoxView HeightRequest="1"
                                 BackgroundColor="{AppThemeBinding Light={StaticResource BorderLight}, Dark={StaticResource BorderDark}}"
                                 Margin="16,0,0,0" />
                    </VerticalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Floating action button -->
        <Button
            Grid.Row="2"
            Text="&#xe90e;"
            FontFamily="IconFont"
            Command="{Binding NewEntryCommand}"
            IsVisible="{Binding IsReadOnly, Converter={StaticResource InverseBooleanConverter}}"
            WidthRequest="56"
            HeightRequest="56"
            CornerRadius="28"
            Padding="0"
            FontSize="28"
            HorizontalOptions="End"
            VerticalOptions="End" />
    </Grid>
</ContentPage>
