<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PwSafeClient.Maui.Pages.Settings.PasswordPoliciesPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Password Policies"
    BackgroundColor="{AppThemeBinding Light={StaticResource BackgroundLight}, Dark={StaticResource BackgroundDark}}">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Close" Command="{Binding CloseCommand}" />
    </ContentPage.ToolbarItems>

    <Grid>
        <ScrollView>
            <VerticalStackLayout Padding="20" Spacing="16">
                <Border Padding="14"
                        BackgroundColor="{AppThemeBinding Light={StaticResource SurfaceLight}, Dark={StaticResource SurfaceDark}}"
                        Stroke="{AppThemeBinding Light={StaticResource BorderLight}, Dark={StaticResource BorderDark}}"
                        StrokeThickness="1"
                        StrokeShape="RoundRectangle 14">
                    <Label Text="Manage policies used for password generation in this vault."
                           FontSize="12"
                           TextColor="{AppThemeBinding Light={StaticResource TextSecondaryLight}, Dark={StaticResource TextSecondaryDark}}" />
                </Border>

                <Label Text="POLICIES" FontSize="12" TextColor="{AppThemeBinding Light={StaticResource TextSecondaryLight}, Dark={StaticResource TextSecondaryDark}}" />
                <Border Padding="0"
                        BackgroundColor="{AppThemeBinding Light={StaticResource SurfaceLight}, Dark={StaticResource SurfaceDark}}"
                        Stroke="{AppThemeBinding Light={StaticResource BorderLight}, Dark={StaticResource BorderDark}}"
                        StrokeThickness="1"
                        StrokeShape="RoundRectangle 14">
                    <VerticalStackLayout Spacing="0">
                        <Grid Padding="14" ColumnDefinitions="*,Auto" ColumnSpacing="10">
                            <VerticalStackLayout Spacing="2">
                                <Label Text="Standard" FontAttributes="Bold" />
                                <Label Text="16 chars · letters + numbers" FontSize="12" TextColor="{AppThemeBinding Light={StaticResource TextSecondaryLight}, Dark={StaticResource TextSecondaryDark}}" />
                            </VerticalStackLayout>
                            <HorizontalStackLayout Grid.Column="1" Spacing="6" VerticalOptions="Center">
                                <Border Padding="6,2"
                                        BackgroundColor="{AppThemeBinding Light={StaticResource Secondary}, Dark={StaticResource Gray800}}"
                                        StrokeThickness="0"
                                        StrokeShape="RoundRectangle 999">
                                    <Label Text="Default" FontSize="10" TextColor="{StaticResource Success}" />
                                </Border>
                                <Label Text=">" TextColor="{AppThemeBinding Light={StaticResource Gray400}, Dark={StaticResource Gray500}}" VerticalOptions="Center" />
                            </HorizontalStackLayout>
                            <Grid.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding OpenEditPolicyCommand}" CommandParameter="Standard" />
                            </Grid.GestureRecognizers>
                        </Grid>
                        <BoxView HeightRequest="1" BackgroundColor="{AppThemeBinding Light={StaticResource BorderLight}, Dark={StaticResource BorderDark}}" />
                        <Grid Padding="14" ColumnDefinitions="*,Auto" ColumnSpacing="10">
                            <VerticalStackLayout Spacing="2">
                                <Label Text="Strong" FontAttributes="Bold" />
                                <Label Text="24 chars · letters + numbers + symbols" FontSize="12" TextColor="{AppThemeBinding Light={StaticResource TextSecondaryLight}, Dark={StaticResource TextSecondaryDark}}" />
                            </VerticalStackLayout>
                            <Label Grid.Column="1" Text=">" TextColor="{AppThemeBinding Light={StaticResource Gray400}, Dark={StaticResource Gray500}}" VerticalOptions="Center" />
                            <Grid.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding OpenEditPolicyCommand}" CommandParameter="Strong" />
                            </Grid.GestureRecognizers>
                        </Grid>
                        <BoxView HeightRequest="1" BackgroundColor="{AppThemeBinding Light={StaticResource BorderLight}, Dark={StaticResource BorderDark}}" />
                        <Grid Padding="14" ColumnDefinitions="*,Auto" ColumnSpacing="10">
                            <VerticalStackLayout Spacing="2">
                                <Label Text="PIN" FontAttributes="Bold" />
                                <Label Text="6 digits · numbers only" FontSize="12" TextColor="{AppThemeBinding Light={StaticResource TextSecondaryLight}, Dark={StaticResource TextSecondaryDark}}" />
                            </VerticalStackLayout>
                            <Label Grid.Column="1" Text=">" TextColor="{AppThemeBinding Light={StaticResource Gray400}, Dark={StaticResource Gray500}}" VerticalOptions="Center" />
                            <Grid.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding OpenEditPolicyCommand}" CommandParameter="PIN" />
                            </Grid.GestureRecognizers>
                        </Grid>
                    </VerticalStackLayout>
                </Border>

                <Button
                    Text="Create New Policy"
                    Command="{Binding OpenCreatePolicyCommand}"
                    BackgroundColor="{StaticResource Primary}"
                    CornerRadius="12"
                    HeightRequest="48" />
            </VerticalStackLayout>
        </ScrollView>

        <Grid IsVisible="{Binding IsSheetVisible}" BackgroundColor="#66000000">
            <Grid.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding CloseSheetCommand}" />
            </Grid.GestureRecognizers>
        </Grid>
        <ContentView IsVisible="{Binding IsSheetVisible}"
                     VerticalOptions="End"
                     BackgroundColor="{AppThemeBinding Light={StaticResource SurfaceLight}, Dark={StaticResource SurfaceDark}}">
            <Border Padding="20,18"
                    BackgroundColor="{AppThemeBinding Light={StaticResource SurfaceLight}, Dark={StaticResource SurfaceDark}}"
                    Stroke="{AppThemeBinding Light={StaticResource BorderLight}, Dark={StaticResource BorderDark}}"
                    StrokeThickness="1"
                    StrokeShape="RoundRectangle 18">
                <VerticalStackLayout Spacing="16">
                    <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="12">
                        <Button Text="Cancel"
                                Command="{Binding CloseSheetCommand}"
                                BackgroundColor="Transparent"
                                TextColor="{AppThemeBinding Light={StaticResource TextSecondaryLight}, Dark={StaticResource TextSecondaryDark}}"
                                FontSize="12"
                                Padding="0"
                                BorderWidth="0" />
                        <Label Grid.Column="1" Text="{Binding SheetTitle}" FontAttributes="Bold" HorizontalOptions="Center" VerticalOptions="Center" />
                        <Button Grid.Column="2"
                                Text="Save"
                                Command="{Binding SaveSheetCommand}"
                                BackgroundColor="Transparent"
                                TextColor="{StaticResource Primary}"
                                FontSize="12"
                                Padding="0"
                                BorderWidth="0" />
                    </Grid>

                    <VerticalStackLayout Spacing="6">
                        <Label Text="Policy Name" FontSize="12" TextColor="{AppThemeBinding Light={StaticResource TextSecondaryLight}, Dark={StaticResource TextSecondaryDark}}" FontAttributes="Bold" />
                        <Border Padding="10"
                                BackgroundColor="{AppThemeBinding Light={StaticResource BackgroundLight}, Dark={StaticResource BackgroundDark}}"
                                Stroke="{AppThemeBinding Light={StaticResource BorderLight}, Dark={StaticResource BorderDark}}"
                                StrokeThickness="1"
                                StrokeShape="RoundRectangle 12">
                            <Entry Placeholder="e.g. Strong" Text="{Binding PolicyName}" />
                        </Border>
                    </VerticalStackLayout>

                    <VerticalStackLayout Spacing="6">
                        <Label Text="Password Length" FontSize="12" TextColor="{AppThemeBinding Light={StaticResource TextSecondaryLight}, Dark={StaticResource TextSecondaryDark}}" FontAttributes="Bold" />
                        <Grid ColumnDefinitions="*,Auto" ColumnSpacing="12">
                            <Border Padding="10"
                                    BackgroundColor="{AppThemeBinding Light={StaticResource BackgroundLight}, Dark={StaticResource BackgroundDark}}"
                                    Stroke="{AppThemeBinding Light={StaticResource BorderLight}, Dark={StaticResource BorderDark}}"
                                    StrokeThickness="1"
                                    StrokeShape="RoundRectangle 12">
                                <Entry Keyboard="Numeric" Text="{Binding PasswordLength}" />
                            </Border>
                            <Label Grid.Column="1" Text="4–64" FontSize="11" TextColor="{AppThemeBinding Light={StaticResource TextSecondaryLight}, Dark={StaticResource TextSecondaryDark}}" VerticalOptions="Center" />
                        </Grid>
                    </VerticalStackLayout>

                    <Label Text="Character Counts" FontSize="12" TextColor="{AppThemeBinding Light={StaticResource TextSecondaryLight}, Dark={StaticResource TextSecondaryDark}}" FontAttributes="Bold" />
                    <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto" ColumnSpacing="12" RowSpacing="12">
                        <Border Grid.Row="0" Grid.Column="0"
                                Padding="10"
                                BackgroundColor="{AppThemeBinding Light={StaticResource BackgroundLight}, Dark={StaticResource BackgroundDark}}"
                                Stroke="{AppThemeBinding Light={StaticResource BorderLight}, Dark={StaticResource BorderDark}}"
                                StrokeThickness="1"
                                StrokeShape="RoundRectangle 12">
                            <VerticalStackLayout Spacing="6">
                                <Label Text="Uppercase" FontSize="12" />
                                <Entry Keyboard="Numeric" Text="{Binding UppercaseCount}" />
                            </VerticalStackLayout>
                        </Border>
                        <Border Grid.Row="0" Grid.Column="1"
                                Padding="10"
                                BackgroundColor="{AppThemeBinding Light={StaticResource BackgroundLight}, Dark={StaticResource BackgroundDark}}"
                                Stroke="{AppThemeBinding Light={StaticResource BorderLight}, Dark={StaticResource BorderDark}}"
                                StrokeThickness="1"
                                StrokeShape="RoundRectangle 12">
                            <VerticalStackLayout Spacing="6">
                                <Label Text="Lowercase" FontSize="12" />
                                <Entry Keyboard="Numeric" Text="{Binding LowercaseCount}" />
                            </VerticalStackLayout>
                        </Border>
                        <Border Grid.Row="1" Grid.Column="0"
                                Padding="10"
                                BackgroundColor="{AppThemeBinding Light={StaticResource BackgroundLight}, Dark={StaticResource BackgroundDark}}"
                                Stroke="{AppThemeBinding Light={StaticResource BorderLight}, Dark={StaticResource BorderDark}}"
                                StrokeThickness="1"
                                StrokeShape="RoundRectangle 12">
                            <VerticalStackLayout Spacing="6">
                                <Label Text="Numbers" FontSize="12" />
                                <Entry Keyboard="Numeric" Text="{Binding NumberCount}" />
                            </VerticalStackLayout>
                        </Border>
                        <Border Grid.Row="1" Grid.Column="1"
                                Padding="10"
                                BackgroundColor="{AppThemeBinding Light={StaticResource BackgroundLight}, Dark={StaticResource BackgroundDark}}"
                                Stroke="{AppThemeBinding Light={StaticResource BorderLight}, Dark={StaticResource BorderDark}}"
                                StrokeThickness="1"
                                StrokeShape="RoundRectangle 12">
                            <VerticalStackLayout Spacing="6">
                                <Label Text="Symbols" FontSize="12" />
                                <Entry Keyboard="Numeric" Text="{Binding SymbolCount}" />
                            </VerticalStackLayout>
                        </Border>
                    </Grid>

                    <VerticalStackLayout Spacing="6">
                        <Label Text="Custom Symbol Set" FontSize="12" TextColor="{AppThemeBinding Light={StaticResource TextSecondaryLight}, Dark={StaticResource TextSecondaryDark}}" FontAttributes="Bold" />
                        <Border Padding="10"
                                BackgroundColor="{AppThemeBinding Light={StaticResource BackgroundLight}, Dark={StaticResource BackgroundDark}}"
                                Stroke="{AppThemeBinding Light={StaticResource BorderLight}, Dark={StaticResource BorderDark}}"
                                StrokeThickness="1"
                                StrokeShape="RoundRectangle 12">
                            <Entry Placeholder="!@#$%" Text="{Binding CustomSymbols}" />
                        </Border>
                    </VerticalStackLayout>

                    <Button Text="Save as Default"
                            Command="{Binding SaveAsDefaultCommand}"
                            BackgroundColor="{StaticResource Primary}"
                            HeightRequest="44"
                            CornerRadius="12" />
                    <Button Text="Delete"
                            Command="{Binding DeletePolicyCommand}"
                            BackgroundColor="{StaticResource Secondary}"
                            TextColor="{StaticResource Error}"
                            BorderColor="{AppThemeBinding Light={StaticResource BorderLight}, Dark={StaticResource BorderDark}}"
                            BorderWidth="1"
                            HeightRequest="44"
                            CornerRadius="12"
                            IsVisible="{Binding CanDeletePolicy}" />
                </VerticalStackLayout>
            </Border>
        </ContentView>
    </Grid>
</ContentPage>
