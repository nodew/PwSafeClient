<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PwSafeClient.Maui.Pages.EntryEditPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Entry"
    BackgroundColor="{AppThemeBinding Light={StaticResource BackgroundLight}, Dark={StaticResource BackgroundDark}}">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Cancel" Command="{Binding CancelCommand}" IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBooleanConverter}}" />
    </ContentPage.ToolbarItems>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="18">
            <Grid ColumnDefinitions="*,Auto" ColumnSpacing="12">
                <Label Text="{Binding PageTitle}" FontSize="20" FontAttributes="Bold" VerticalOptions="Center" />
                <ActivityIndicator
                    Grid.Column="1"
                    IsRunning="{Binding IsBusy}"
                    IsVisible="{Binding IsBusy}"
                    VerticalOptions="Center" />
            </Grid>

            <VerticalStackLayout Spacing="8">
                <Label Text="Title" FontSize="13" TextColor="{AppThemeBinding Light={StaticResource TextSecondaryLight}, Dark={StaticResource TextSecondaryDark}}" FontAttributes="Bold" />
                <Border Padding="12" BackgroundColor="{AppThemeBinding Light={StaticResource SurfaceLight}, Dark={StaticResource SurfaceDark}}"
                        Stroke="{AppThemeBinding Light={StaticResource BorderLight}, Dark={StaticResource BorderDark}}" StrokeThickness="1"
                        StrokeShape="RoundRectangle 10">
                    <Entry
                        Placeholder="e.g. Netflix, Amazon"
                        Text="{Binding Title}"
                        BackgroundColor="Transparent" />
                </Border>
            </VerticalStackLayout>

            <VerticalStackLayout Spacing="8">
                <Label Text="Username / Email" FontSize="13" TextColor="{AppThemeBinding Light={StaticResource TextSecondaryLight}, Dark={StaticResource TextSecondaryDark}}" FontAttributes="Bold" />
                <Border Padding="12" BackgroundColor="{AppThemeBinding Light={StaticResource SurfaceLight}, Dark={StaticResource SurfaceDark}}"
                        Stroke="{AppThemeBinding Light={StaticResource BorderLight}, Dark={StaticResource BorderDark}}" StrokeThickness="1"
                        StrokeShape="RoundRectangle 10">
                    <Entry
                        Placeholder="email@example.com"
                        Text="{Binding Username}"
                        BackgroundColor="Transparent" />
                </Border>
            </VerticalStackLayout>

            <VerticalStackLayout Spacing="8">
                <Label Text="Password" FontSize="13" TextColor="{AppThemeBinding Light={StaticResource TextSecondaryLight}, Dark={StaticResource TextSecondaryDark}}" FontAttributes="Bold" />
                <Border Padding="12" BackgroundColor="{AppThemeBinding Light={StaticResource SurfaceLight}, Dark={StaticResource SurfaceDark}}"
                        Stroke="{AppThemeBinding Light={StaticResource BorderLight}, Dark={StaticResource BorderDark}}" StrokeThickness="1"
                        StrokeShape="RoundRectangle 10">
                    <Grid ColumnDefinitions="*,Auto" ColumnSpacing="8">
                        <Entry
                            Grid.Column="0"
                            Placeholder="Password"
                            Text="{Binding Password}"
                            IsPassword="{Binding IsPasswordHidden}"
                            BackgroundColor="Transparent" />
                        <Label Grid.Column="1"
                               Text="{Binding TogglePasswordButtonText}"
                               TextColor="{StaticResource Primary}"
                               FontSize="12"
                               VerticalOptions="Center"
                               HorizontalOptions="End"
                               Margin="4,0,0,0">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding TogglePasswordCommand}" />
                            </Label.GestureRecognizers>
                        </Label>
                    </Grid>
                </Border>
            </VerticalStackLayout>

            <VerticalStackLayout Spacing="8">
                <Label Text="URL" FontSize="13" TextColor="{AppThemeBinding Light={StaticResource TextSecondaryLight}, Dark={StaticResource TextSecondaryDark}}" FontAttributes="Bold" />
                <Border Padding="12" BackgroundColor="{AppThemeBinding Light={StaticResource SurfaceLight}, Dark={StaticResource SurfaceDark}}"
                        Stroke="{AppThemeBinding Light={StaticResource BorderLight}, Dark={StaticResource BorderDark}}" StrokeThickness="1"
                        StrokeShape="RoundRectangle 10">
                    <Entry
                        Placeholder="https://"
                        Text="{Binding Url}"
                        BackgroundColor="Transparent" />
                </Border>
            </VerticalStackLayout>

            <VerticalStackLayout Spacing="8">
                <Label Text="Notes" FontSize="13" TextColor="{AppThemeBinding Light={StaticResource TextSecondaryLight}, Dark={StaticResource TextSecondaryDark}}" FontAttributes="Bold" />
                <Border Padding="12" BackgroundColor="{AppThemeBinding Light={StaticResource SurfaceLight}, Dark={StaticResource SurfaceDark}}"
                        Stroke="{AppThemeBinding Light={StaticResource BorderLight}, Dark={StaticResource BorderDark}}" StrokeThickness="1"
                        StrokeShape="RoundRectangle 10">
                    <Editor
                        AutoSize="TextChanges"
                        Placeholder="Security questions, PINs, etc."
                        Text="{Binding Notes}"
                        BackgroundColor="Transparent" />
                </Border>
            </VerticalStackLayout>

            <Label
                Text="{Binding ErrorMessage}"
                IsVisible="{Binding ErrorMessage, Converter={StaticResource StringNotNullOrWhiteSpaceConverter}}"
                TextColor="{StaticResource Error}"
                FontSize="12" />

            <Button
                Text="Save"
                Command="{Binding SaveCommand}"
                IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBooleanConverter}}"
                BackgroundColor="{StaticResource Primary}"
                CornerRadius="12"
                HeightRequest="48" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
